<Window x:Class="WPF_01C.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_01C"
        mc:Ignorable="d"
        Title="MyFirstGUI" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Button Grid.Column="0">Hi There...</Button>
        <Button Grid.Column="1">How goes it.</Button>
        <Button Grid.Column="0" Grid.Row="1">I'm well!</Button>
        <Button Grid.Column="1" Grid.Row="1">Yourself?</Button>
    </Grid>
</Window>
